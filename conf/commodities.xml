          </leftrotthruster>
          <rightrotthruster>
            <type>rotthruster</type>
            <volume>1</volume>
            <exposure>90</exposure>
            <location>external</location>
          </rightrotthruster>
          <transright>
            <type>thruster</type>
            <volume>1</volume>
            <exposure>90</exposure>
            <location>external</location>
          </transright>
          <transleft>
            <type>thruster</type>
            <volume>1</volume>
            <exposure>270</exposure>
            <location>external</location>
          </transleft>
          <engineslot1>
            <type>engine</type>
            <volume>5</volume>
            <exposure>180</exposure>
            <location>external</location>
	    <yoffset>-33</yoffset>
	    <xoffset>-25</xoffset>
          </engineslot1>
          <engineslot2>
            <type>engine</type>
            <volume>5</volume>
            <exposure>180</exposure>
            <location>external</location>
