<commodities>
  <shipparts>
    <!-- commodity type: SHIPPARTS (special type) -->
    <hulls>
      <!-- ship hulls -->
      <samplehull1>
        <!-- Hull ID -->
        <name>Nadia</name>
        <!-- hull name -->
        <unit>piece</unit>
        <!-- unit of measurement (piece or kg) -->
        <mass>6000</mass>
        <!-- empty hull mass in kg -->
        <avgprice>1200</avgprice>
        <!-- average price -->
        <volume>600</volume>
        <!-- hull external volume in m^3 (note: not INTERNAL volume!) -->
        <image>ship2.png</image>
        <!-- the pic representing this hull -->
        <scale>0.05</scale>
        <!-- the scale of the visual image (1 = full resolution of the image) -->
        <size>43</size>
        <!-- the diameter of the hull in meters (for radar blip size, rotational physics and rough collision detection) -->
        <thrusterpos>40</thrusterpos>
        <!-- distance (in meters) of the rotation thrusters from the center of the mass -->
        <maxspeed>1000</maxspeed>
        <!-- the maximum speed allowed for this hull in m/s (1 standard pixel equals 1m) -->
        <maxrotspd>270</maxrotspd>
        <!-- the maximum rotational speed (deg/s) allowed for this hull -->
        <slots>
          <leftrotthruster>
            <!-- slot ID -->
            <type>rotthruster</type>
            <!-- slot type -->
            <volume>1</volume>
            <!-- the volume of the slot in m^3 -->
            <exposure>270</exposure>
            <!-- exposure to space: left, right, nose, tail. Remove if no exposure -->
            <location>external</location>
            <!-- internal/external, affects received damage -->
          </leftrotthruster>
          <rightrotthruster>
            <type>rotthruster</type>
            <volume>1</volume>
            <exposure>90</exposure>
            <location>external</location>
          </rightrotthruster>
          <transright>
            <type>engine</type>
            <volume>1</volume>
            <exposure>90</exposure>
            <location>external</location>
	  <xoffset>10</xoffset>
	  <yoffset>0</yoffset>
          </transright>
          <transleft>
            <type>engine</type>
            <volume>1</volume>
            <exposure>270</exposure>
            <location>external</location>
	  <xoffset>-10</xoffset>
	  <yoffset>0</yoffset>
          </transleft>
          <mainengineslot1>
            <type>engine</type>
            <volume>5</volume>
            <exposure>180</exposure>
	  <location>external</location>
	  <xoffset>2</xoffset>
	  <yoffset>-27</yoffset>
	  <!-- x and y offsets mark the engine exhaust points -->
          </mainengineslot1>
          <mainengineslot2>
            <type>engine</type>
            <volume>5</volume>
            <exposure>180</exposure>
            <location>external</location>
	    <xoffset>-2</xoffset>
	    <yoffset>-27</yoffset>	    
	    <!-- x and y offsets mark the engine exhaust points -->
          </mainengineslot2>
          <reverseengineslot1>
            <type>engine</type>
            <volume>3</volume>
            <exposure>0</exposure>
            <location>external</location>
	    <xoffset>7</xoffset>
	    <yoffset>7</yoffset>	    
          </reverseengineslot1>
          <reverseengineslot2>
            <type>engine</type>
            <volume>3</volume>
            <exposure>0</exposure>
            <location>external</location>
	    <xoffset>-7</xoffset>
	    <yoffset>7</yoffset>	    
          </reverseengineslot2>
          <weaponslot1>
            <type>weapon</type>
            <volume>10</volume>
            <location>external</location>
            <xoffset>0</xoffset>
            <yoffset>25</yoffset>
          </weaponslot1>
          <equipmentslot1>
            <type>equipment</type>
            <volume>100</volume>
            <location>internal</location>
          </equipmentslot1>
        </slots>
      </samplehull1>
      <samplehull2>
        <name>Long range fighter</name>
        <unit>piece</unit>
        <mass>16000</mass>
        <avgprice>15000</avgprice>
        <volume>9600</volume>
        <image>ship3.png</image>
        <scale>0.08</scale>
        <size>70</size>
        <thrusterpos>85</thrusterpos>
        <maxspeed>800</maxspeed>
        <maxrotspd>180</maxrotspd>
        <slots>
          <leftrotthruster>
