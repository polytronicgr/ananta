          <reverseengineslot1>
            <!-- slot ID -->
            <type>engine</type>
            <volume>5</volume>
            <exposure>0</exposure>
            <location>external</location>
	    <yoffset>13</yoffset>
	    <xoffset>25</xoffset>
          </reverseengineslot1>
          <reverseengineslot2>
            <type>engine</type>
            <volume>5</volume>
            <exposure>0</exposure>
            <location>external</location>
	    <yoffset>13</yoffset>
	    <xoffset>-25</xoffset>
          </reverseengineslot2>
          <weaponslot1>
            <type>weapon</type>
            <volume>10</volume>
            <location>external</location>
            <xoffset>0</xoffset>
            <yoffset>35</yoffset>
          </weaponslot1>
          <equipmentslot1>
            <type>equipment</type>
            <volume>100</volume>
            <location>internal</location>
          </equipmentslot1>
        </slots>
      </samplehull2>
    </hulls>
